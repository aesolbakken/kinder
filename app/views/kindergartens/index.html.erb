<h1>Barnehager</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Navn</th>
      <th>E-post</th>
      <th>Telefon</th>
      <th>Handlinger</th>
    </tr>
  </thead>
  <tbody>
    <% @kindergartens.each do |kindergarten| %>
      <tr>
        <td><%= link_to kindergarten.name, kindergarten_path(kindergarten) %></td>
        <td><%= kindergarten.email %></td>
        <td><%= kindergarten.phone %></td>
        <td>
          <%= link_to 'Endre', edit_kindergarten_path(kindergarten), :class => 'btn btn-mini' %>
          <%= link_to 'Slett', kindergarten_path(kindergarten), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Ny', new_kindergarten_path, :class => 'btn btn-primary' %>
