<%= simple_form_for(@kindergarten, :html => {:class => 'form-horizontal'}) do |form| %>

  <% if @kindergarten.errors.any? %>
    <% @kindergarten.errors.full_messages.each do |msg| %>
      <div class="alert alert-error">
        <a class="close" data-dismiss="alert">Ã—</a>

        <p><%= msg %></p>
      </div>
    <% end %>

  <% end %>

  <%= form.input :name,  :label => 'Navn' %>
  <%= form.input :email, :label => 'E-post' %>
  <%= form.input :phone, :label => 'Telefon' %>

  <%= form.button :wrapped, :cancel => kindergartens_path %>
<% end %>
