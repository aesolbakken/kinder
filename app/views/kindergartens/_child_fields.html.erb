<div class="fields potentially-hidden" style="background-color: #d3d3d3; padding: 20px; margin: 20px;">
  <span style="float: right;"><i class="icon-remove remove-child" title="Slett barn" style="cursor: pointer"></i></span>
  <p>Barnet</p>
  <%= f.input :name, :label => 'Navn' %>
  <%= f.input :birthday, :label => 'FÃ¸dselsdag', :as => :string, :input_html => {:class => 'date_picker', :size => 900, :value => (f.object.birthday.blank? ? '' : f.object.birthday.strftime('%d.%m.%Y'))} %>
