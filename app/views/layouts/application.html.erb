<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : 'Barnehager' %></title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= yield(:head) %>
</head>

<body>
<div class="container">
  <%= render :partial => 'common/menu' %>
</div>

<div class="container">
  <div class="content">


    <div class="row">
      <div class="span12">

        <%= render :partial => 'common/flashes' %>

        <%= yield %>
      </div>
    </div>

    <footer>
      <%= render :partial => 'common/footer' %>
    </footer>
  </div>
</div>

</body>
</html>